# Environment variables for InverseNeural Trading API

# Application Settings
DEBUG=false
API_SECRET_KEY=your-super-secure-secret-key-here-32-chars-minimum

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_MAX_CONNECTIONS=10

# CORS Configuration
ALLOWED_ORIGINS=https://www.inverseneurallab.com,http://localhost:3000

# Algorithm Configuration
MAX_CONCURRENT_USERS=500
DEFAULT_POSITION_SIZE=5.0
MAX_POSITION_SIZE=15.0
MIN_POSITION_SIZE=1.0

# IQ Option Configuration
IQ_OPTION_BASE_URL=https://api.iqoption.com
IQ_OPTION_TIMEOUT=30

# Monitoring
ENABLE_METRICS=true
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_PER_USER=100
